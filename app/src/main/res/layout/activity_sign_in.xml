<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".SignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logop4nj"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tP4NJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="P4NJ"
            android:textColor="#0F4D1F"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvxJember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tP4NJ"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="JEMBER"
            android:textColor="#0F4D1F"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_below="@+id/tP4NJ"
            android:layout_marginTop="70dp"
            android:background="@drawable/rect1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnMasuk"
                    android:background="@drawable/rect1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masuk" />

                <Button
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btnDaftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect1_1"
                    android:text="Daftar" />

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_FB"
                    android:text="Masuk dengan Facebook"
                    android:textColor="@color/white"
                    android:background="@drawable/rect3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>




    </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/yellow"
            app:civ_border_width="1dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/dialog_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="214dp"
            android:padding="10dp"
            android:src="@drawable/iconuser" />

        <TextView
            android:id="@+id/tvmAIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tP4NJ"
            android:layout_marginTop="340dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Dengan Masuk atau Mendaftar kamu Menyetujui
Ketentuan Layanan dan Ketentuan Privasi"
            android:textColor="#0F4D1F"
            android:textSize="15dp"
            android:textStyle="bold" />




    </RelativeLayout>



</ScrollView>