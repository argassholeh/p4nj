<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:id="@+id/cara_kepengurusan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialog_img"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:civ_border_color="@color/greentua2"
            app:civ_border_width="1dp"
            android:src="@drawable/iconuser" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tv_NamaK"
                android:text="Nama. "
                />

            <TextView
                android:id="@+id/tv_jabatanK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                />

            <TextView
                android:id="@+id/tv_devisiK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devisi"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masa Bakti"
                android:id="@+id/tv_masabaktiK"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

